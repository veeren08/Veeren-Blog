<div class="container">
  <div class="row">
    <div class="col-sm-7">
      <div class="card" style="padding: 15px;">
      <h1><%= @article.title %></h1>
		<p><%= @article.body %></p>
		<p>Number Of View: <%= @article.like %></p>
		<% if user_signed_in? %>
		   <p>
		  	 <%= link_to "Edit", edit_article_path(@article), class: "btn btn-info btn-sm"%>
		  	 <%= link_to "Destroy", article_path(@article),
		                  method: :delete,
		                  data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
		   </p>
		<% end %>
		</div>
		<br>
		<h3>Comments</h3>
		<%= render @article.comments %>
	</div>
	<div class="col-sm-5">
		<% if user_signed_in? %>
			<%= render 'comments/form' %>
		<% else %>
		<i style="color:#872323">Please Login For View Or Add Comments</i>
		<% end %>
    </div>
  </div>
</div>






